{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: cl.exe build active file",
            "command": "cl.exe",
            "args": [
                "-std:c++17",
                "/Zi",
                "/EHsc",
                "/nologo",                
                "${workspaceFolder}/src/model/*.cpp",
                "${workspaceFolder}/src/reader/*.cpp",
                "${workspaceFolder}/src/writer/*.cpp",                
                "${workspaceFolder}/*.cpp",
                "/Fe${fileDirname}/${fileBasenameNoExtension}.exe"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$msCompile"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ],
    "version": "2.0.0"
}